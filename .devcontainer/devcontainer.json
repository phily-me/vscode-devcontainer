{
  "name": "PME Development Environment",
  
  // Use simple Nix-based Dockerfile
  "dockerFile": "Dockerfile",
  "context": "..",
  
  "workspaceFolder": "/workspace",
  
  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "extensions": [
        "jnoortheen.nix-ide",
        "ms-python.python",
        "ms-python.debugpy", 
        "charliermarsh.ruff",
        "denoland.vscode-deno",
        "skellock.just",
        "ms-vscode.vscode-json",
        "mkhl.direnv"
      ],
      "settings": {
        "deno.enable": true,
        "deno.lint": true
      }
    }
  }
}